
@{
    ViewBag.Title = "Index";
}

<h2>Clients Manager</h2>
<div id="tabs-clients">
    <ul class="nav nav-tabs">
        <li><a href="#fisrtTab">Details</a></li>
        <li><a href="#secondTab">Create</a></li>
    </ul>
    <div id="fisrtTab">
        <table id="tableClientInfo" class="table table-striped dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Identification</th>
                    <th>Name</th>
                    <th>PhoneNumber</th>
                    <th>Mail</th>
                    <th>Address</th>
                    <th>Controls</th>
                </tr>
            </thead>
            <tbody id="tblClientInfo"></tbody>
        </table>
    </div>
    <div id="secondTab">
        <div>
            <form class="form-panel">
                <div class="form-group">
                    <label>Identification:</label>
                    <input type="text" class="form-control" id="txtClientIdentification">
                </div>
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" class="form-control" id="txtClientName">
                </div>
                <div class="form-group">
                    <label>PhoneNumber:</label>
                    <input type="text" class="form-control" id="txtClientPhoneNumber">
                </div>
                <div class="form-group">
                    <label>Mail:</label>
                    <input type="text" class="form-control" id="txtClientMail">
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" class="form-control" id="txtClientAddress">
                </div>
                <button type="submit" class="btn btn-primary" onclick="insertClient()">Save</button>
            </form>
        </div>
    </div>
</div>

@*Modals Windows*@
<div class="modal fade" Id="modalClient" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal">x</button>
            <h4>Client update information</h4>
            <div class="modal-body">
                <div>
                    <form class="form-panel">
                        <div class="form-group">
                            <label>Identification:</label>
                            <input type="text" class="form-control" id="txtClientIdentificationUpdate" readonly>
                        </div>
                        <div class="form-group">
                            <label>Name:</label>
                            <input type="text" class="form-control" id="txtClientNameUpdate">
                        </div>
                        <div class="form-group">
                            <label>PhoneNumber:</label>
                            <input type="text" class="form-control" id="txtClientPhoneNumberUpdate">
                        </div>
                        <div class="form-group">
                            <label>Mail:</label>
                            <input type="text" class="form-control" id="txtClientMailUpdate">
                        </div>
                        <div class="form-group">
                            <label>Address:</label>
                            <input type="text" class="form-control" id="txtClientAddressUpdate">
                        </div>                      
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                        <button type="submit" class="btn btn-primary" onclick="updateClient()">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Project/Clients.js"></script>
