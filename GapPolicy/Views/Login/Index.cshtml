
@{
    ViewBag.Title = "Index";
}

<h2>Access Control</h2>
<div>
    <form class="form-panel" action="~/Login/Validate">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message)) {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }
        }
        <div class="form-group">
            <label>User Id (Identification):</label>
            <input type="text" class="form-control" id="txtLoginIdentification" name="Identification">
        </div>
        <div class="form-group">
            <label>Passowrd:</label>
            <input type="password" class="form-control" id="txtLoginPassword" name="Password">
        </div>        
        <button id="btnLogin" type="submit" class="btn btn-primary">Login</button>
    </form>
</div>

