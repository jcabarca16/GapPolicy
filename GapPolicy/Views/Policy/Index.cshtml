
@{
    ViewBag.Title = "Index";
}

<h2>Policy Manager</h2>

<div id="tabs-policy">
    <ul class="nav nav-tabs">
        <li><a href="#fisrtTab">Details</a></li>
        <li><a href="#secondTab">Create</a></li>
    </ul>
    <div id="fisrtTab">
        <table id="tablePolicyInfo" class="table table-striped dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Client</th>
                    <th>Type</th>
                    <th>Percentage</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>Period</th>
                    <th>Cost</th>
                    <th>RiskType</th>
                    <th>Status</th>
                    <th>Controls</th>
                </tr>
            </thead>
            <tbody id="tblPolicyInfo"></tbody>
        </table>
    </div>
    <div id="secondTab">
        <div>
            <form class="form-panel">
                <div class="form-group">
                    <label>Client:</label>
                    <select name="clients" id="txtPolicyClient">
                        <option value="-1">--- Seleccione --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Type:</label>
                    <select name="types" id="txtPolicyType">
                        <option value="-1">--- Seleccione --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Percentage:</label>
                    <input type="text" class="form-control" id="txtPolicyPercentage">
                </div>
                <div class="form-group">
                    <label>StartDate:</label>
                    <input type="text" class="form-control" id="txtPolicyStartDate" readonly>
                </div>
                <div class="form-group">
                    <label>EndDate:</label>
                    <input type="text" class="form-control" id="txtPolicyEndDate" readonly>
                </div>
                <div class="form-group">
                    <label>Period:</label>
                    <input type="text" class="form-control" id="txtPolicyPeriod">
                </div>
                <div class="form-group">
                    <label>Cost:</label>
                    <input type="text" class="form-control" id="txtPolicyCost">
                </div>
                <div class="form-group">
                    <label>RiskType:</label>
                    <select name="types" id="txtPolicyRiskType">
                        <option value="Bajo">Bajo</option>
                        <option value="medio">medio</option>
                        <option value=" medio-alto">medio-alto</option>
                        <option value=" alto">alto</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" onclick="insertPolicy()">Save</button>
            </form>
        </div>
    </div>
</div>

@*Modals Windows*@
<div class="modal fade" Id="modalPolicy" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal">x</button>
            <h4>Policy update information</h4>
            <div class="modal-body">
                <div>
                    <form class="form-panel">
                        <div class="form-group">
                            <label>Id:</label>
                            <input type="text" class="form-control" id="txtPolicyIdUp" readonly>
                        </div>
                        <div class="form-group">
                            <label>Client:</label>
                            <select name="clientsUP" id="txtPolicyClientUP">
                                <option value="-1">--- Seleccione --</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Type:</label>
                            <select name="types" id="txtPolicyTypeUP">
                                <option value="-1">--- Seleccione --</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Percentage:</label>
                            <input type="text" class="form-control" id="txtPolicyPercentageUP">
                        </div>
                        <div class="form-group">
                            <label>StartDate:</label>
                            <input type="text" class="form-control" id="txtPolicyStartDateUp">
                        </div>
                        <div class="form-group">
                            <label>EndDate:</label>
                            <input type="text" class="form-control" id="txtPolicyEndDateUp">
                        </div>
                        <div class="form-group">
                            <label>Period:</label>
                            <input type="text" class="form-control" id="txtPolicyPeriodUp">
                        </div>
                        <div class="form-group">
                            <label>Cost:</label>
                            <input type="text" class="form-control" id="txtPolicyCostUp">
                        </div>
                        <div class="form-group">
                            <label>RiskType:</label>
                            <select name="types" id="txtPolicyRiskTypeUp">
                                <option value="Bajo">Bajo</option>
                                <option value="medio">medio</option>
                                <option value=" medio-alto">medio-alto</option>
                                <option value=" alto">alto</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <button type="submit" class="btn btn-primary" onclick="updatePolicy()">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Project/Policy.js"></script>
