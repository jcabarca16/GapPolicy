
@{
    ViewBag.Title = "Index";
}

<h2>Policy Type Manager</h2>
<div id="tabs-policy-type">
    <ul class="nav nav-tabs">
        <li><a href="#fisrtTab">Details</a></li>
        <li><a href="#secondTab">Create</a></li>
    </ul>
    <div id="fisrtTab">
        <table id="tablePolicyTypeInfo" class="table table-striped dt-responsive nowrap">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Controls</th>
                </tr>
            </thead>
            <tbody id="tblPolicyTypeInfo"></tbody>
        </table>
    </div>
    <div id="secondTab">
        <div>
            <form class="form-panel">
                <div class="form-group">
                    <label>Type:</label>
                    <input type="text" class="form-control" id="txtPolicyTypeType">
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <input type="text" class="form-control" id="txtPolicyTypeDescription">
                </div>
                <button type="submit" class="btn btn-primary" onclick="insertPolicyType()">Save</button>
            </form>
        </div>
    </div>
</div>

@*Modals Windows*@
<div class="modal fade" Id="modalPolicyType" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal">x</button>
            <h4>Policy type update information</h4>
            <div class="modal-body">
                <div>
                    <form class="form-panel">
                        <div class="form-group">
                            <label>Id:</label>
                            <input type="text" class="form-control" id="txtPolicyTypeIdUp" readonly>
                        </div>
                        <div class="form-group">
                            <label>Type:</label>
                            <input type="text" class="form-control" id="txtPolicyTypeTypeUp">
                        </div>
                        <div class="form-group">
                            <label>Description:</label>
                            <input type="text" class="form-control" id="txtPolicyTypeDescriptionUp">
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <button type="submit" class="btn btn-primary" onclick="updatePolicyType()">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Project/PolicyType.js"></script>
